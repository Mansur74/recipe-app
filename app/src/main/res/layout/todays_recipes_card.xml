<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/todays_recipes_layout"
    android:layout_width="185dp"
    android:layout_height="250dp"
    android:layout_marginRight="25dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_searchbox"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/todays_liked_icon"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_unlike">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="55dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/food_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    android:layout_centerHorizontal="true"
                    android:textSize="10dp"
                    android:textColor="@color/turquoise"
                    android:layout_marginBottom="5dp">
                </TextView>

                <TextView
                    android:id="@+id/food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blueburry Muffins"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp">
                </TextView>

                <RatingBar
                    android:id="@+id/food_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:rating="3.5"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:numStars="5"
                    android:stepSize="1"
                    android:theme="@style/RatingBar">

                </RatingBar>

                <TextView
                    android:id="@+id/food_calory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 Calories"
                    android:layout_centerHorizontal="true"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="5dp">
                </TextView>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/gray"
                        android:text="10 mins"
                        android:drawableLeft="@drawable/ic_time"
                        android:drawablePadding="5dp"
                        android:layout_marginRight="20dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/gray"
                        android:text="1 serving"
                        android:drawableLeft="@drawable/ic_serving"
                        android:drawablePadding="5dp">

                    </TextView>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/food_image"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/buffle">

        </ImageView>


</RelativeLayout>

